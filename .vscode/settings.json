{
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [
            120
        ],
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.output/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.venv": true // Excluding .venv from the explorer
    },
    "git.ignoreLimitWarning": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    // Additional useful settings for working in VS Code:
    "editor.minimap.enabled": true, // Show a minimap on the right side for quick navigation.
    "explorer.confirmDelete": false, // Do not ask for confirmation when deleting files from the explorer.
    "explorer.confirmDragAndDrop": false, // Do not ask for confirmation when moving files using drag and drop.
    "workbench.editor.enablePreview": true, // Preview files when clicking them in the explorer.
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "python.sortImports.args": [
        "--profile",
        "black"
    ],
    "python.terminal.activateEnvironment": true, // Automatically activate the virtual environment when opening a terminal.
    "python.linting.pylintEnabled": true, // Enable pylint
    "python.linting.enabled": true, // Enable linting in general
    "python.linting.lintOnSave": true,
}
